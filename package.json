{
  "name": "lunes-js-api",
  "version": "0.31.0",
  "description": "Lunes client-side API library",
  "keywords": [
    "cryptocurrency",
    "waves",
    "api",
    "seed",
    "transactions",
    "cryptography",
    "signature"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lunes-platform/lunes-js-api.git"
  },
  "main": "dist/waves-api.min.js",
  "types": "raw/src/WavesAPI.d.ts",
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.43",
    "browserify": "^14.4.0",
    "chai": "^4.1.2",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-commonjs": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-requirejs": "^1.1.0",
    "karma-typescript": "^3.0.7",
    "mocha": "^4.0.1",
    "mock-require": "^2.0.2",
    "requirejs": "^2.3.5",
    "typescript": "^2.5.3",
    "uglify-js": "^3.1.4"
  },
  "dependencies": {
    "bignumber.js": "4.1.0",
    "crypto-js": "3.1.9-1",
    "node-fetch": "1.7.3",
    "parse-json-bignumber": "0.0.2",
    "ts-api-validator": "2.1.2",
    "ts-utils": "6.0.1"
  },
  "scripts": {   
    "_build-partial": "node_modules/.bin/browserify raw/src/WavesAPI.js --im -s WavesAPI -u parse-json-bignumber -u bignumber.js -u crypto -u node-fetch -u ts-utils -u ts-api-validator > ./dist/waves-api.partial.js",
    "_build-full": "node_modules/.bin/browserify raw/src/WavesAPI.js --im -s WavesAPI -u crypto -u node-fetch > ./dist/waves-api.js",
    "build": "npm run compile && npm run ponto && mkdir dist && npm run _build-partial && npm run _build-full && npm run uglifyjs",
    "compile": "mkdir raw",
    "ponto": "./node_modules/.bin/tsc --declaration --outDir raw",
    "uglifyjs": "node_modules/.bin/uglifyjs ./dist/waves-api.js -o ./dist/waves-api.min.js && npm run nodeerror",
    "nodeerror": "node_modules/.bin/uglifyjs ./dist/waves-api.partial.js -o ./dist/waves-api.partial.min.js",
    "prepublishOnly": "npm run build"
  }
}
